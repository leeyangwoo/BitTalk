<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorMainBg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:background="@color/colorMainFragmentBg"
            android:weightSum="1">

            <Button
                android:id="@+id/btnMainchatFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채팅방목록"
                android:onClick="selectFrag"
                android:background="@color/colorMainChatbtnBg"
                android:textColor="@color/colorMainChatbtnText"
                android:layout_weight="0.81" />

            <Button
                android:id="@+id/btnMainsrcFragment"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:text="친구찾기"
                android:onClick="selectFrag"
                android:background="@color/colorMainSrcbtnBg"
                android:textColor="@color/colorMainSrcbtnText"
                android:layout_weight="0.27" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"/>


    </LinearLayout>

</RelativeLayout>
